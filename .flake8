[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    migrations,
    staticfiles,
    .mypy_cache,
    .pytest_cache,
    htmlcov

ignore = E203,E501,W503,E302,E701
select = E,W,F,C
max-complexity = 10

per-file-ignores =
    __init__.py:F401
    settings.py:E501